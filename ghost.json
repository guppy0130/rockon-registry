{
    "Ghost": {
        "containers": {
            "ghost": {
                "image": "ghost",
                "launch_order": 1,
                "ports": {
                    "2368": {
                        "description": "Port for website",
                        "host_default": 8081,
                        "protocol": "tcp",
                        "label": "Ghost Port",
                        "ui": true
                    }
                },
                "volumes": {
                    "/var/lib/ghost/content": {
                        "description": "Choose a share for your blog data.",
                        "label": "Blog Storage",
                        "min_size": "1073741824"
                    }
                },
                "environment": {
                    "url": {
                        "description": "URL the blog is at. Leave this as localhost if unsure",
                        "label": "Blog URL"
                    },
                    "mail__transport": {
                        "description": "Email service",
                        "label": "SMTP if Mailgun/SES, DIRECT otherwise"
                    },
                    "mail__options__service": {
                        "description": "Mailgun or SES",
                        "label": "Service name"
                    },
                    "mail__options__auth__user": {
                        "description": "Email service username",
                        "label": "Email service username"
                    },
                    "mail__options__auth__pass": {
                        "description": "Email service password",
                        "label": "Email service password"
                    }
                }
            }
        },
        "description": "ghost: A publishing platform for professional bloggers",
        "volume_add_support": false,
        "more_info": "navigate to the ui link for the admin site or go to the base url for the public facing site",
        "ui": {
            "slug": "ghost"
        },
        "version": "1.0",
        "website": "https://ghost.org"
    }
}
